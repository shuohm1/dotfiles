# .aliasrc

# expand aliases with sudo
# see: https://qiita.com/homines22/items/ba1a6d03df85e65fc85a
alias sudo="sudo "

# disable PROMPT_COMMAND for su
alias su="PROMPT_COMMAND= su"

# directory stack
alias pd="pushd"
alias bd="popd"
# always print the directory stack with one entry per line
alias dirs="dirs -p"

# ls
alias ls="ls -v --color=auto"
alias la="ls -A"     # almost all
alias le="ls -al"    # everything
alias lf="ls -l -L"  # follow symlinks
alias lg="ls -go"    # do not list owner/group
alias lh="ls -hl"    # human readable
alias ll="ls -l"     # long
alias lt="ls -al --time-style='+%F %T.%3N'"
# more details
alias laa="ls -al"
alias lff="lf -a"
alias lgg="lg -a"
alias lhh="lh -a"
alias lll="ll -a"
alias ltt="lt -L"
# TODO: deprecated
alias lz="ls -al && false"

# always prompt before overwrite with mv/cp/rm
alias mv="mv -i"
alias cp="cp -i"
alias rm="rm -i"

# less
alias lless="less -L"  # ignore LESSOPEN
alias nless="less -N"  # with line numbers
alias sless="less -S"  # do not wrap on the right edge
alias xless="less -X"  # leave displayed contents

# grep
alias grep="grep --color=auto"
alias egrep="grep -E"
alias fgrep="grep -F"
alias pgrep="grep -P"
alias rgrep="grep -r"
alias bgrep="command grep"

# sed
alias sed="sed -E"
alias bsed="command sed"

# colordiff
alias diff="diff -u"
if [ -x "$(command which colordiff 2> /dev/null)" ]; then
  alias diff="colordiff -u"
fi
alias cdiff="command diff"

# screen
alias sc="screen"
alias sl="screen -ls"  # list sessions
alias sr="screen -R"   # resume a session
alias sn="screen -S"   # set a session name

# vim
alias vi="vim"
alias view="vim -R"

# git
alias ga="git add"
alias gn="git checkout -b"
alias gk="git commit --verbose"
alias gd="git diff"
alias gf="git fetch"
alias gl="git log"
opts="--abbrev-commit --all --date-order --decorate --graph"
alias g1="GIT_PAGER='less -S' git log ${opts} --oneline"
alias gg="git log ${opts} --stat"
alias gp="git log ${opts} --patch-with-stat"
unset opts
alias gm="git merge --no-ff"
alias gr="git remote show origin"
alias gi="git status"
alias gap="git add --patch"
alias gco="git checkout"
alias gff="git merge --ff-only"
alias gsw="git switch"
alias gull="git pull --ff-only"
alias gush="git push"

# a pseudo command: need to configure an alias in .gitconfig
alias gw="git where-i-am"

# ring a bell
alias bell="echo -ne '\a'"
