# .aliasrc

# expand aliases with sudo
# see: https://qiita.com/homines22/items/ba1a6d03df85e65fc85a
alias sudo="sudo "

# disable PROMPT_COMMAND for su
alias su="PROMPT_COMMAND= su"

# directory stack
alias pd="pushd"
alias bd="popd"
# always print the directory stack with one entry per line
alias dirs="dirs -p"

# ls in color
alias ls="ls --color=auto"

# ls extentions
alias lc="ls -C"  # list by columns
alias lx="ls -x"  # list by lines
alias la="ls -a"
alias ll="ls -l"
alias lh="ls -lh"
alias lz="ls -la" # list all files in long format
alias lg="ls -go" # show neither owner nor group

# always prompt before overwrite with mv/cp/rm
alias mv="mv -i"
alias cp="cp -i"
alias rm="rm -i"

# less
alias lless="less -L" # ignore LESSOPEN
alias sless="less -S" # do not wrap on the right edge
alias xless="less -X" # leave displayed contents

# grep
alias grep="grep --color=auto"
alias egrep="grep -E"
alias fgrep="grep -F"
alias pgrep="grep -P"
alias cgrep="command grep"

# sed
alias sed="sed -E"
alias csed="command sed"

# colordiff
if [ -x "$(command which colordiff 2> /dev/null)" ]; then
  alias diff="colordiff"
fi

# screen
alias sc="screen"
alias sl="screen -ls" # list sessions
alias sr="screen -R"  # resume a session
alias sn="screen -S"  # specify a session name

# vim
alias vi="vim"

# git
alias ga="git add"
alias gb="git --no-pager branch"
alias gt="git checkout"
alias gk="git commit --verbose"
alias gd="git diff"
alias gf="git fetch"
alias gl="git log"
_opts_="--abbrev-commit --all --date-order --decorate --graph"
alias gg="git log ${_opts_} --stat"
alias gp="git log ${_opts_} --patch-with-stat"
unset _opts_
alias gm="git merge --no-ff"
alias gr="git remote show origin"
alias gi="git status"
alias gw="git switch"
alias gfast="git merge --ff-only"
alias gpull="git pull"
alias gpush="git push"
alias git-id="git show HEAD | command grep -i -m1 -o -P '(?<=^commit )\w+'"
alias git-np="git --no-pager"

# ring a bell
alias bell="echo -ne '\a'"
