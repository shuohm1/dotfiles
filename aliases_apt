### .aliases_apt ###
# aptitude のエイリアス設定

if [ -z "${whichapt}" ]; then
	whichapt=$(which aptitude 1>/dev/null 2>&1; echo $?)
fi

if [ ${whichapt} -eq 0 ]; then
	alias a="aptitude"
	alias asearch="aptitude search"
	alias ashow="aptitude show"
	alias aup="aptitude update"
	alias aupg="aptitude safe-upgrade"
#	alias aupdg="aptitude update && aptitude safe-upgrade"
fi
