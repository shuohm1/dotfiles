### .aliases_brew ###
# Homebrew のエイリアス設定

# see: .zshenv
if [ -z "${whichbrew}" ]; then
  whichbrew=$(which brew 1>/dev/null 2>&1; echo $?)
fi

if [ ${whichbrew} -eq 0 ]; then
  alias b="brew"
  alias bs="brew search"
  alias bi="brew info"
  alias bl="brew list"
# alias bh="brew home"
  alias bopt="brew options"
  alias bout="brew outdated"
  alias bup="brew update"
  alias bupg="brew upgrade"
  alias bupdg="brew update && brew upgrade"
fi
